<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.a2xe.experiments.pokemondeck.views.decks.DecksFragment">

    <TextView
        android:id="@+id/decs_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/decks_intro_txt" />

    <ListView
        android:id="@+id/list_of_decks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_plus_circle_white_36dp" />

</FrameLayout>
